<% provide(:title, @user.name) %>
<div class="table-responsive">
	<table class="table">
		<caption><%= @user.name %></caption>
		<thead>
			<tr>
				<th>个人信息</th>
				<th>值</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>邮箱</td>
				<td><%= @user.email %></td>
			</tr>
			<tr>
				<td>学号</td>
				<td><%= @user.num %></td>
			</tr>
			<tr>
				<td>专业</td>
				<td><%= @user.major %></td>
			</tr>
			<tr>
				<td>部门</td>
				<td><%= @user.department %></td>
			</tr>
		</tbody>
</table>
</div>